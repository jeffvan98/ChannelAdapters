{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/EgressDapr.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/EgressDapr.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/EgressDapr.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "daprd-debug",
            "type": "daprd",
            "appId": "EgressDapr",
            "appPort": 5269,
            "componentsPath": "./Components",
            "dependsOn": "build"
        },
        {
            "label": "daprd-down",
            "type": "daprd-down",
            "appId": "EgressDapr"
        }        
    ]
}